<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

    <TextView android:id="@+id/depositor_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/depositor_balance"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="32sp"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/depositor_balance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/your_depositor"/>

    <TextView
            android:id="@+id/your_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="32sp"
            android:layout_below="@id/depositor_balance"/>

    <Button android:id="@+id/transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/transfer"/>

</RelativeLayout>