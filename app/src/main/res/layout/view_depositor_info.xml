<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_user_info">

    <ImageView android:id="@+id/depositor_photo"
               android:layout_width="88dp"
               android:layout_height="88dp"
               android:layout_gravity="center"
               android:layout_marginBottom="22dp"
               android:layout_marginTop="22dp"
               android:background="@drawable/ic_photo_default_24dp"
               android:contentDescription="@string/profile_photo"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:divider="@color/dark_5"
                  android:orientation="vertical">
        <TextView style="@style/editTextCaption"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/label_name"/>
        <EditText android:id="@+id/depositor_name"
                  style="@style/editActionEditText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/anonymous"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:orientation="vertical">
        <TextView style="@style/editTextCaption"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/label_description"/>
        <EditText android:id="@+id/depositor_description"
                  style="@style/editActionEditText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/indescribable"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:orientation="vertical">
        <TextView style="@style/editTextCaption"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/label_server_address"/>
        <EditText android:id="@+id/server_address"
                  style="@style/editActionEditText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/server_address"/>
    </LinearLayout>
</LinearLayout>