<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_user_info">

    <ImageView android:id="@+id/depositor_photo"
               android:layout_width="88dp"
               android:layout_height="88dp"
               android:layout_gravity="center"
               android:layout_marginBottom="22dp"
               android:layout_marginTop="22dp"
               android:background="#404040"
               android:contentDescription="@string/profile_photo"/>

    <EditText android:id="@+id/depositor_name"
              style="@style/editActionEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/profile_name"/>

    <EditText android:id="@+id/depositor_description"
              style="@style/editActionEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/profile_description"/>

    <EditText android:id="@+id/server_address"
              style="@style/editActionEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/server_address"/>
</LinearLayout>