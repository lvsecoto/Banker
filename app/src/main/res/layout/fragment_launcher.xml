<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <EditText android:id="@+id/bank_ip_address"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/server_address"/>

        <TextView android:id="@+id/bank_ip_address_hint"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button android:id="@+id/be_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_bank"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end">
        <CheckBox android:id="@+id/be_banker_with_user"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/is_also_join_bank"/>
        <Button android:id="@+id/be_banker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_bank"/>
    </LinearLayout>
</LinearLayout>